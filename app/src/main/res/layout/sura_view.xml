<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewModel"
            type="com.example.quranapplication.ui.viewmodel.MainViewModel" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.quranapplication.other.TextViewEx
        android:id="@+id/suracontenttv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="@font/hafsfont"
        android:scrollbars="vertical"
        android:textAlignment="center"
        android:padding="5dp"
        android:layout_marginHorizontal="5dp"
        android:textSize="@{viewModel.Companion.textSize}"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></com.example.quranapplication.other.TextViewEx>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>